                <option value="O">O</option>
                <option value="P">P</option>
                <option value="Q">Q</option>
                <option value="R">R</option>
                <option value="S">S</option>
                <option value="T">T</option>
                <option value="U">U</option>
                <option value="V">V</option>
                <option value="W">W</option>
                <option value="X">X</option>
                <option value="Y">Y</option>
                <option value="Z">Z</option>
              </select>
            </div>
          </div>
          </div>
        </div>


      <div class="panel-heading col-md-6">
        <div class="btn-group">
          <button class="btn btn-warning" ng-click="va.GuardarArea()" data-ng-disabled='!validinput.$valid'>Guardar</button>
          <button class="btn btn-danger" ng-click="va.CancelarArea()">Cancelar</button>
        </div>
      </div>

    </form>
    </div>
  </div>
<!-- fin del formulario para ingresar datos -->


</section>
<div class="panel-heading">
<form method="POST" action="#" editable-form name="tableform" onaftersave="va.ModificarArea()" oncancel="cancel()" >

<section class="panel-heading">
<div class="btn-form" ng-show="tableform.$visible">
  <div class="btn-group">
    <button type="submit" ng-disabled="tableform.$waiting" class="btn btn-success">guardar</button>
    <button type="button" ng-disabled="tableform.$waiting" ng-click="tableform.$cancel()" class="btn btn-danger">cancelar</button>
    </div>
</div>



</section>


<font size=1>
<table datatable="ng" class="table table-condensed table-hover p-table dataTables_wrappe table-striped">
<div>
  <thead>
    <th style="width: 5%;">ID</th>
    <th style="width: 20%;">NOMBRE DE AREA</th>
    <th style="width: 20%;">AREA PADRE</th>
    <th style="width: 10%;">PROYECTO</th>
    <th style="width: 10%;">PROPUESTA</th>
    <th style="width: 10%;">CONTACTO</th>
    <th style="width: 10%;">COMERCIAL</th>
    <th style="width: 10%;">ORDEN</th>
  </thead>


  <tr ng-repeat="areas in va.area track by $index">
    <td>
      <span editable-text="areas.areaid" e-from="tableform" e-required>
         {{areas.areaid}}
      </span>
    </td>
    <td>
      <span editable-text="areas.nombre" e-from="tableform" e-required >
        {{areas.nombre}}
      </span>
    </td>
    <td>
      <span editable-text="areas.area_padre" e-from="tableform">
        {{areas.area_padre}}
      </span>
    </td>
    <td>
      <span editable-text="areas.isproyecto" e-from="tableform" >
        {{areas.isproyecto}}
      </span>
    </td>
    <td>
      <span editable-text="areas.ispropuesta" e-from="tableform">
        {{areas.ispropuesta}}
      </span>
    </td>
    <td>
      <span editable-text="areas.iscontacto" e-from="tableform">
        {{areas.iscontacto}}
      </span>
    </td>
    <td>
      <span editable-text="areas.iscomercial" e-from="tableform">
        {{areas.iscomercial}}
      </span>
    </td>
    <td>
      <span editable-text="areas.orden" e-from="tableform">
        {{areas.orden}}
      </span>
    </td>
  </tr>

</table>
