 <!-- INICIO DE LA TABLA DE AREA EN ANGULAR-->
 <div class="panel">
 <section class="panel">
 <header class="panel-heading">
 <h2>Lista de Areas</h2>



 <div class="btn-edit">
  <button type="button" class="btn btn-default" ng-show="!tableform.$visible" ng-click="tableform.$show(); va.CancelarArea()">
    editar
  </button>
  <button class="btn btn-primary" ng-click="va.ShowFormArea()" ng-hide="va.formVisibilityArea; va.tableVisibilityArea" ng-show="!tableform.$visible">Agregar Area</button>
</div>
<!-- inicio del formulario para ingresar datos -->
  <div class="form-group ">
    <div ng-show="va.formVisibilityArea"  >
      <form name='validinput'>
        <div class="input-group">
          <div class="panel">
          <div class="panel-heading">
            <div class="col-xs-1" >
              <span class="input-group-addon">ID</span>
              <input type="text" class="form-control input-sm" placeholder='areaid' name='areaid' data-ng-model="va.areaid"  required data-ng-class='{error: validinput.areaid.$invalid && !validinput.$pristine}'>
            </div>
            <div class="col-xs-3" >
              <span class="input-group-addon">Nombre</span>
              <input type="text" class="form-control input-sm" placeholder='nombre' name='nombre' data-ng-model="va.nombre"  required data-ng-class='{ error: validinput.nombre.$invalid && !validinput.$pristine }'>
            </div>
            <div class="col-xs-3" >
              <span class="input-group-addon">Area Padre</span>
              <input type="text" class="form-control input-sm" placeholder='area_padre' name='area_padre' data-ng-model="va.area_padre"/>

              <!-- <select id="va.area_padre" class="form-control input-sm" placeholder='area_padre' name='area_padre' data-ng-model="va.area.areaid" data-ng-options="c.nombre for c in va.area">
              <option value="va.area_padre">Seleccione...</option>
              </select> -->
              <!-- <select class="form-control" ng-model="areapadre.nombre"
            ng-options="areapadre.areaid as areapadre.nombre for areapadre in va.area">
            </select> -->

            </div>
            <div class="col-xs-1" >
              <span class="input-group-addon">Proyecto</span>
              <!-- <input type="text" class="form-control input-sm" placeholder='isproyecto' name='isproyecto' data-ng-model="va.isproyecto"/> -->
              <select id="va.isproyecto" class="form-control input-sm" placeholder='isproyecto' name='isproyecto' data-ng-model="va.isproyecto">
                <option value="">Seleccione...</option>
                <option value="S">Si</option>
                <option value="N">No</option>
              </select>
            </div>
            <div class="col-xs-1" >
              <span class="input-group-addon">Propuesta</span>
              <!-- <input type="select" class="form-control input-sm" placeholder='ispropuesta' name='ispropuesta' data-ng-model="va.ispropuesta"/> -->
              <select id="va.ispropuesta" class="form-control input-sm" placeholder='ispropuesta' name='ispropuesta' data-ng-model="va.ispropuesta">
              <option value="">Seleccione...</option>
                <option value="S">Si</option>
                <option value="N">No</option>
              </select>
            </div>
            <div class="col-xs-1" >
              <span class="input-group-addon">Contacto</span>
              <!-- <input type="text" class="form-control input-sm" placeholder='iscontacto' name='iscontacto' data-ng-model="va.iscontacto"/> -->
              <select id="va.iscontacto" class="form-control input-sm" placeholder='iscontacto' name='iscontacto' data-ng-model="va.iscontacto">
              <option value="">Seleccione...</option>
                <option value="S">Si</option>
                <option value="N">No</option>
              </select>
            </div>
            <div class="col-xs-1" >
              <span class="input-group-addon">Comercial</span>
              <!-- <input type="text" class="form-control input-sm" placeholder='iscomercial' name='iscomercial' data-ng-model="va.iscomercial"/> -->
              <select id="va.iscomercial" class="form-control input-sm" placeholder='iscomercial' name='iscomercial' data-ng-model="va.iscomercial">
              <option value="">Seleccione...</option>
                <option value="S">Si</option>
                <option value="N">No</option>
              </select>
            </div>
            <div class="col-xs-1" >
              <span class="input-group-addon">Orden</span>
              <!-- <input type="text" class="form-control input-sm" placeholder='orden' name='orden' data-ng-model="va.orden"/> -->
              <select id="va.orden" class="form-control input-sm" placeholder='orden' name='orden' data-ng-model="va.orden">
