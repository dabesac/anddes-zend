      <span editable-text="unidadmineras.unidad_mineraid" e-from="tableform" e-required >
        {{unidadmineras.unidad_mineraid}}
      </span>
    </td>
    <td>
      <span editable-text="unidadmineras.clienteid" e-from="tableform" e-required>
         {{unidadmineras.clienteid}}
      </span>
    </td>
    <td>
      <span editable-text="unidadmineras.nombre" e-from="tableform" e-required>
        {{unidadmineras.nombre}}
      </span>
    </td>
    <td>
      <span editable-text="unidadmineras.estado" e-from="tableform" e-required>
        {{unidadmineras.estado}}
      </span>
    </td>
    <td>
      <span editable-text="unidadmineras.direccion" e-from="tableform">
        {{unidadmineras.direccion}}
      </span>
    </td>
    <td>
      <span editable-text="unidadmineras.paisid" e-from="tableform">
        {{unidadmineras.paisid}}
      </span>
    </td>
    <td>
      <span editable-text="unidadmineras.departamentoid" e-from="tableform">
        {{unidadmineras.departamentoid}}
      </span>
    </td>
    <td>
      <span editable-text="unidadmineras.distritoid" e-from="tableform">
        {{unidadmineras.distritoid}}
      </span>
    </td>
    <td>
      <span editable-text="unidadmineras.tag" e-from="tableform">
        {{unidadmineras.tag}}
      </span>
    </td>
    <td>
      <span editable-text="unidadmineras.isunidadminera" e-from="tableform">
        {{unidadmineras.isunidadminera}}
      </span>
    </td>
  </tr>

</table>
</font>

