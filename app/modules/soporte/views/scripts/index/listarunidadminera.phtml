 <!-- INICIO DE LA TABLA DE PRUEBA UNIDAD MINERA EN ANGULAR-->
 <div class="panel">
 <section class="panel">
 <header class="panel-heading">
 <h2>Lista de Unidad Minera</h2>



 <div class="btn-edit">
  <button type="button" class="btn btn-default" ng-show="!tableform.$visible" ng-click="tableform.$show(); vum.CancelarUnidadMinera()">
    editar
  </button>
  <button class="btn btn-primary" ng-click="vum.ShowFormUnidadMinera()" ng-hide="vum.formVisibilityUnidadMinera; vum.tableVisibilityUnidadMinera" ng-show="!tableform.$visible">Agregar Unidad Minera</button>
</div>
<!-- inicio del formulario para ingresar datos -->
  <div class="form-group ">
    <div ng-show="vum.formVisibilityUnidadMinera"  >
      <form name='validinput'>
        <div class="input-group">
          <div class="panel">
          <div class="panel-heading">
            <div class="col-xs-3" >
              <span class="input-group-addon">ID</span>
              <input type="text" class="form-control input-sm" placeholder='unidad_mineraid' name='unidad_mineraid' data-ng-model="vum.unidad_mineraid"  required data-ng-class='{error: validinput.unidad_mineraid.$invalid && !validinput.$pristine}'>
            </div>
            <div class="col-xs-3" >
              <span class="input-group-addon">Ruc</span>
              <input type="text" class="form-control input-sm" placeholder='clienteid' name='clienteid' data-ng-model="vum.clienteid"  required data-ng-class='{ error: validinput.clienteid.$invalid && !validinput.$pristine }'>

             <!--  <select id="vc.ruc" class="form-control input-sm" placeholder='ruc' name='ruc' data-ng-model="vc.ruc" data-ng-options="c.nombre_comercial for c in vc.cliente">
              <option value="vc.ruc">Seleccione...</option>
              </select>

              <select class="form-control" ng-model="areapadre.nombre"
            ng-options="areapadre.areaid as areapadre.nombre for areapadre in va.area">
            </select> -->

            </div>
            <div class="col-xs-3" >
              <span class="input-group-addon">Nombre</span>
              <input type="text" class="form-control input-sm" placeholder='nombre' name='nombre' data-ng-model="vum.nombre"  required data-ng-class='{ error: validinput.nombre.$invalid && !validinput.$pristine }'>
            </div>
            <div class="col-xs-3" >
              <span class="input-group-addon">Estado</span>
              <input type="text" class="form-control input-sm" placeholder='estado' name='estado' data-ng-model="vum.estado"  required data-ng-class='{ error: validinput.estado.$invalid && !validinput.$pristine }'>
            </div>
            <div class="col-xs-3" >
              <span class="input-group-addon">Direcci√≥n</span>
              <input type="text" class="form-control input-sm" placeholder='direccion' name='direccion' data-ng-model="vum.direccion"/>
            </div>
            <div class="col-xs-3" >
              <span class="input-group-addon">Pais</span>
              <input type="text" class="form-control input-sm" placeholder='paisid' name='paisid' data-ng-model="vum.paisid"/>
            </div>
            <div class="col-xs-3" >
              <span class="input-group-addon">Departamento</span>
              <input type="text" class="form-control input-sm" placeholder='departamentoid' name='departamentoid' data-ng-model="vum.departamentoid"/>
            </div>
            <div class="col-xs-3" >
              <span class="input-group-addon">Distrito</span>
              <input type="text" class="form-control input-sm" placeholder='distritoid' name='distritoid' data-ng-model="vum.distritoid"/>
            </div>
            <div class="col-xs-3" >
              <span class="input-group-addon">Tag</span>
              <input type="text" class="form-control input-sm" placeholder='tag' name='tag' data-ng-model="vum.tag"/>
            </div>
            <div class="col-xs-3" >
              <span class="input-group-addon">Unidad Minera</span>
              <input type="text" class="form-control input-sm" placeholder='isunidadminera' name='isunidadminera' data-ng-model="vum.isunidadminera"/>
            </div>

          </div>
          </div>
        </div>


      <div class="panel-heading col-md-6">
        <div class="btn-group">
          <button class="btn btn-warning" ng-click="vum.GuardarUnidadMinera()" data-ng-disabled='!validinput.$valid'>Guardar</button>
          <button class="btn btn-danger" ng-click="vum.CancelarUnidadMinera()">Cancelar</button>
        </div>
      </div>

    </form>
    </div>
  </div>
<!-- fin del formulario para ingresar datos -->


</section>


<!-- inicio del formulario para modificar datos -->
<div class="panel-heading">
<form method="POST" action="#" editable-form name="tableform" onaftersave="vum.ModificarUnidadMinera()" oncancel="cancel()" >

<section class="panel-heading">
<div class="btn-form" ng-show="tableform.$visible">
  <div class="btn-group">
    <button type="submit" ng-disabled="tableform.$waiting" class="btn btn-success">guardar</button>
    <button type="button" ng-disabled="tableform.$waiting" ng-click="tableform.$cancel()" class="btn btn-danger">cancelar</button>
    </div>
</div>



</section>

<font size=1>
