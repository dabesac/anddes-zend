	<td style="width:40%">
      
        <form editable-form name="uidform" onaftersave="saveColumn('uid')" ng-show="uidform.$visible">
          <button type="submit" ng-disabled="uidform.$waiting" class="btn btn-primary">
            save
          </button>
          <button type="button" ng-disabled="uidform.$waiting" ng-click="uidform.$cancel()" class="btn btn-default">
