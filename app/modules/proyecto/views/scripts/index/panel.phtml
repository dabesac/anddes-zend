    </div>
    <div class="form-group">
    	<select class="form-control" ng-model="CD.selectedCategory"           
          ng-options="c.name for c in CD.integrantes"></select>
    </div>

    <div class="form-group">
        <button ng-click="CD.addTask()" class="btn btn-primary btn-xs">agregar personal</button>
    </div>

