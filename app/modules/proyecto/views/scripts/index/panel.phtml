<!--  Item group inside each category -->
    <div class="list-items animate-show-item" ng-show="integrante.expanded">
	    <ul>
          <li ng-repeat="item in integrante.items" class="animate-repeat-item">
            <span editable-text="item.uid" e-name="uid" e-form="uidform" onbeforesave="checkName($data)">
            	{{item.uid}}
        	</span>
            <!-- {{item.uid}} -->
            <span ng-class="{done:item.completed}" ltc-editable class-off="done" ng-model="item.uid"></span>
            <button ng-show="!item.completed" ng-click="CD.completeTask(item)" class="btn btn-success btn-xs">done</button>
            <button ng-show="item.completed" ng-click="CD.uncompleteTask(item)" class="btn btn-warning btn-xs">reset</button>
            <button ng-click="CD.deleteTask(integrante, item)" class="btn btn-danger btn-xs">eliminar</button>
          </li>
        </ul>
          <div class="no-items"><small ng-show="integrante.expanded && integrante.items.length==0">NO ITEMS!</small></div>
    </div>

	<div ng-repeat-end>
	    <button ng-show="category.expanded" class="btn btn-primary btn-block btn-sm animate-show-item" disabled="disabled">/ {{integrante.name}} </button>
	    <hr>
	</div>


	<!-- anadir area -->

	<div class="form-group" ng-class="{'has-error': errorNewCategory}">
        <label for="areaName">Add nueva area:</label>
        <input id="areaName" class="form-control" type="text" placeholder="type area name" ng-model="CD.newAreaName" ng-enter="addArea()" />
    </div>
        <hr>
    <div class="form-group">
        <button ng-click="CD.addArea()" class="btn btn-primary btn-xs">agregar</button>
    </div>
