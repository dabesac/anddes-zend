<!--Modal para la edicion de los datos de los contactos -->
<header class="modal-header">
  <button type="button" class="close" aria-hidden="true" ng-click="mc.cancel()">x</button>
  <h4 class="modal-title">Editar Contacto:</h1>
</header>
<div class="modal-body">
  <section class="form-group">
    <label for="">Nombre y Apellido:</label>
    <input type="text" class="form-control" ng-model="mc.contacto.atencion">
  </section>
  <section class="form-group">
    <label for="">√Årea:</label>
    <input type="text" class="form-control" ng-model="mc.contacto.area">
  </section>
  <section class="form-group">
    <label for="">Correo:</label>
    <input type="text" class="form-control" ng-model="mc.contacto.correo">
  </section>
</div>
<footer class="modal-footer">
  <button type="button" class="btn btn-success btn-xs" ng-click="mc.agregarContacto()">Agregar</button>
  <button type="button" class="btn btn-info btn-xs">Modificar</button>
  <button type="button" class="btn btn-warning btn-xs">Eliminar</button>
  <button type="button" class="btn btn-danger btn-xs" ng-click="mc.cancel()">Cancelar</button>
</footer>
